    server {
      server_name www.zooniverse.org;
      include /etc/nginx/ssl.default.conf;
      include /etc/nginx/shared/panoptes-nginx-common.conf;
    }

    server {
      server_name panoptes.zooniverse.org;
      include /etc/nginx/ssl.default.conf;
      include /etc/nginx/shared/panoptes-nginx-common.conf;
    }

    server {
