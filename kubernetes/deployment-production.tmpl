apiVersion: apps/v1
kind: Deployment
metadata:
  name: panoptes-production-redis
  labels:
    app: panoptes-production-redis
spec:
  replicas: 1
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app: panoptes-production-redis
  template:
    metadata:
      labels:
        app: panoptes-production-redis
    spec:
      tolerations:
      - key: "servicelife"
        operator: "Equal"
        value: "longlife"
        effect: "NoSchedule"
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: servicelife
                operator: In
                values:
                - longlife
      initContainers:
        - name: disable-thp
          image: busybox
          volumeMounts:
            - name: host-sys
              mountPath: /host-sys
          command: ["sh", "-c", "echo never >/host-sys/kernel/mm/transparent_hugepage/enabled"]
      containers:
        - name: panoptes-production-redis
          image: redis:6.0.5
          resources:
            requests:
              memory: "2500Mi"
              cpu: "500m"
            limits:
              memory: "2500Mi"
              cpu: "1500m"
          volumeMounts:
          - name: panoptes-production-redis-data
            mountPath: "/data"
      volumes:
        - name: panoptes-production-redis-data
          persistentVolumeClaim:
            claimName: panoptes-production-redis
        - name: host-sys
          hostPath:
            path: /sys

